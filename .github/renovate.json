{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
      "config:best-practices"
  ],
  "packageRules": [
      {
        "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
        "automerge": true
      }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "git-submodules": {
    "enabled": true
  },
  "platformAutomerge": true,
  "automergeStrategy": "squash"
}
